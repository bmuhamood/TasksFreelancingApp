= simple_form_for(@task, html: { class: "form_horizontal" }) do |f| 
    = f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a Category" }, input_html: { class: "dropdown-toggle"}
    = f.input :title, label: "Task Title", input_html: { class: "form-control"}
    = f.input :description, label: "Task Description", input_html: { class: "form-control"}
    = f.input :company, label: "Your Company", input_html: { class: "form-control"}
    = f.input :url, label: "url", input_html: { class: "form-control"}
    %br/
    = f.button :submit, class: "btn btn-primary"