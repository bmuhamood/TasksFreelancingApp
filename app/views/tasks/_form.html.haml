= simple_form_for(@task, html: { class: "form_horizontal" }) do |f| 
    = f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a Category" }
    = f.input :title, label: "Task Title"
    = f.input :description, label: "Task Description"
    = f.input :company, label: "Your Company"
    = f.input :url, label: "url"
    %br/
    = f.button :submit